<h1>Login</h1>
<%= form_tag magic_tokens_path, method: :post do %>
  <div class="field">
    <%= label_tag :name %><br/>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :email %><br/>
    <%= text_field_tag :email %>
  </div>
  <div class="actions">
    <%= submit_tag "Magic Login" %>
  </div>
<% end %>
